<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/sealed_logo_transparent"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sealed_logo_transparent"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sealed"
        tools:targetApi="31">
        <activity
            android:name=".main.Setting"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".chatWindows.chatWindow"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".main.Registration"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".main.Login"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait"
            android:exported="true">

            <!-- Add the intent-filter to make Splash the main activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:screenOrientation="portrait"
            android:exported="false">

            <!-- Remove the intent-filter from MainActivity -->

        </activity>
    </application>

</manifest>